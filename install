#!/usr/bin/env python3
import logging
import os
import sys
import re
import argparse
import importlib


def setup_logger():
    root = logging.getLogger()
    root.setLevel(logging.DEBUG)

    handler = logging.StreamHandler(sys.stdout)
    handler.setLevel(logging.DEBUG)
    formatter = logging.Formatter('[%(asctime)s/%(name)s] %(message)s')
    handler.setFormatter(formatter)
    root.addHandler(handler)


def parse_args():
    parser = argparse.ArgumentParser(description='Install modules')
    parser.add_argument('module', help='directory to install', nargs='+')
    return parser.parse_args()


def main():
    directory = os.path.abspath(os.path.dirname(__file__))
    sys.path.append(os.path.join(directory, 'lib'))

    setup_logger()
    args = parse_args()
    original_dir = os.getcwd()
    for module in args.module:
        full_module_name = 'mod.' + re.sub('[-_]', '.', module)
        full_module_path = os.path.join(
            directory, full_module_name.replace('.', '/'))
        os.chdir(full_module_path)
        module = importlib.import_module(full_module_name + '.install')
        module.run()
        os.chdir(original_dir)


if __name__ == '__main__':
    main()
