{
    "basic":
    {
        "wheel_threshold": 1,
        "zoom_delta": 0.1,
        "enlarge": 0,
        "extensions": ["jpg", "jpeg", "jfif", "gif", "png", "tga", "webm", "bmp"],
        "default_volume": 1,
        "sort_style": "natural_case_insensitive",
        "keep_zoom": 0,
        "slideshow_delay": 500
    },

    "shortcuts":
    [
        ["Backspace",          ["prev_file"]],
        ["Space",              ["next_file"]],
        ["Page up",            ["prev_file"]],
        ["Page down",          ["next_file"]],
        ["Ctrl+Page up",       ["prev_file", 50]],
        ["Ctrl+Page down",     ["next_file", 50]],
        ["K",                  ["prev_file"]],
        ["J",                  ["next_file"]],
        ["WheelUp",            ["prev_file"]],
        ["WheelDown",          ["next_file"]],
        ["Home",               ["first_file"]],
        ["Ctrl+A",             ["first_file"]],
        ["End",                ["last_file"]],
        ["Ctrl+E",             ["last_file"]],
        ["Escape",             ["close"]],
        ["Q",                  ["close"]],
        ["Ctrl+Q",             ["close"]],

        ["Ctrl+WheelUp",       ["zoom_in", 1]],
        ["Ctrl+WheelDown",     ["zoom_out", 0]],
        ["Ctrl+Shift+0",       ["zoom_original"]],
        ["Ctrl+0",             ["zoom_fit_in_window"]],
        ["Ctrl+=",             ["zoom_in", 0]],
        ["Ctrl+-",             ["zoom_out", 0]],

        ["Left",               ["pan", -50, 0]],
        ["Right",              ["pan", 50, 0]],
        ["Up",                 ["pan", 0, -50]],
        ["Down",               ["pan", 0, 50]],
        ["Ctrl+Left",          ["pan", -100, 0]],
        ["Ctrl+Right",         ["pan", 100, 0]],
        ["Ctrl+Up",            ["pan", 0, -100]],
        ["Ctrl+Down",          ["pan", 0, 100]],

        ["Z",                  ["set_zoom", "4"], ["unsmooth"], ["keep_zoom"]],
        ["Shift+Z",            ["set_zoom", "1"], ["smooth"], ["unkeep_zoom"]],
        ["S",                  ["toggle_smooth"]],
        ["B",                  ["toggle_status"]],
        ["P",                  ["play_pause"]],
        ["G",                  ["toggle_slideshow"]],
        ["F5",                 ["reload"]],
        ["Ctrl+R",             ["remove_dead"], ["reload"]],
        ["Ctrl+C",             ["copy_file_path", 1]],
        ["Ctrl+S",             ["copy_file"]],
        ["Ctrl+Shift+S",       ["copy_file", "~/"]],
        ["Ctrl+M",             ["move_file"]],
        ["Ctrl+Shift+M",       ["move_file", "~/"]],
        ["Delete",             ["delete_file"]],
        ["9",                  ["volume_down", 0.05]],
        ["Shift+Left",         ["seek", -2500]],
        ["Shift+Right",        ["seek", 2500]],
        ["Alt+Left",           ["run_script", ["convert", "{}", "-rotate", "-90", "bmp:{}"]], ["reload"]],
        ["Alt+Right",          ["run_script", ["convert", "{}", "-rotate", "90", "bmp:{}"]], ["reload"]],
        ["0",                  ["volume_up", 0.05]],
        ["Return",             ["run_script", ["helper-eyecandy-select", "{}"]], ["close"]],
        ["[",                  ["copy_file", "~/hub/yume/"]],
        ["]",                  ["copy_file", "~/"]],
        ["RockerLeftToRight",  ["copy_file", "~/hub/yume/"]],
        ["RockerRightToLeft",  ["copy_file", "~/"]],

        ["Ctrl+D",             ["run_script", ["bspc", "rule", "-a", "urxvt", "-o", "floating=on"]], ["run_script_async", ["urxvt", "-e", "send-to-yume", "--wait", "errors", "{}"]]],

        ["Ctrl+1",             ["run_script", ["wallpaper", "set", "1", "{}"]]],
        ["Ctrl+2",             ["run_script", ["wallpaper", "set", "2", "{}"]]],

        ["Button2",            ["zoom_in"]],
        ["Button5",            ["toggle_slideshow"]]
    ]
}
