# basic
set editor=`echo \$EDITOR`
set mail_check=30
set timeout=30
set send_charset='utf-8'
set beep_new=yes

# directories
set header_cache="~/.mutt/cache/headers"
set message_cachedir="~/.mutt/cache/bodies"
set certificate_file="~/.mutt/certificates"

# account
source ~/.mutt/identify.muttrc
set realname='Marcin Kurczewski'
#set from="GMAIL_USER@gmail.com"
#set imap_user="GMAIL_USER@gmail.com"
#set smtp_url="smtps://GMAIL_USER@smtp.gmail.com:465/"
#set imap_pass="GMAIL_PASS"
#set smtp_pass="GMAIL_PASS"

set folder='imaps://imap.mailbox.org/'
set spoolfile='+INBOX'
set postponed='+Drafts'
set trash='+Trash'
set record='+Sent'
set ssl_starttls=yes
set ssl_force_tls=yes
set move=no

#keep the fucking connection to prevent 'Mailbox closed.'
set imap_passive=no
set imap_idle=yes
set imap_keepalive=60

#folder-hook . 'unset trash'
#folder-hook imaps://imap.gmail.com 'set trash="=[Gmail]/Trash"'

# colors
source ~/.mutt/colors.muttrc

# save mail to file
macro index,pager s "| ~/.mutt/file_email ~/text/saved-mail/<enter>"

# save attachment to ~/hub/mail/
macro attach s <save-entry><bol>~/hub/mail/<enter>

# prefer plaintext to html
auto_view text/html
alternative_order text/plain text/html
