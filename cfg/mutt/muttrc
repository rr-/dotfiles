# basic -----------------------------------------------------------------------
set editor=`echo \$EDITOR`
set mail_check=30
set timeout=30
set send_charset='utf-8'
set beep_new=yes

# directories
set header_cache="~/.mutt/cache/headers"
set message_cachedir="~/.mutt/cache/bodies"
set certificate_file="~/.mutt/certificates"

# keep the connection to prevent 'Mailbox closed.'
set imap_passive=no
set imap_idle=yes
set imap_keepalive=60

# colors
source ~/.mutt/colors.muttrc

# prefer plaintext to html
auto_view text/html
alternative_order text/plain text/html


# account ---------------------------------------------------------------------
source ~/.mutt/identify.muttrc
# set realname="name surname"
# set from="GMAIL_USER@gmail.com"
# set imap_user="GMAIL_USER@gmail.com"
# set smtp_url="smtps://GMAIL_USER@smtp.gmail.com:465/"
# set imap_pass="GMAIL_PASS"
# set smtp_pass="GMAIL_PASS"

set folder='imaps://imap.mailbox.org/'
set spoolfile='+INBOX'
set postponed='+Drafts'
set trash='+Trash'
set record='+Sent'
set ssl_starttls=yes
set ssl_force_tls=yes
set move=no

# reply using the address the message was sent to
set reverse_name=yes
# set alternates "^contact@example.com$" "^contact@example.org$"
# send-hook "~f contact@example.com" 'set realname="Sales Department"'


# bindings --------------------------------------------------------------------
bind attach,browser,index       g   noop
bind attach,browser,index       gg  first-entry
bind attach,browser,index       G   last-entry
bind browser,pager,index        N   search-opposite
bind pager                      g  noop
bind pager                      gg  top
bind pager                      G   bottom
bind pager                      k   previous-line
bind pager                      j   next-line

bind attach,browser,pager,index \CF next-page
bind attach,browser,pager,index \CB previous-page
bind attach,browser,pager,index \Cu half-up
bind attach,browser,pager,index \Cd half-down
bind browser,pager              \Ce next-line
bind browser,pager              \Cy previous-line
bind index                      \Ce next-line
bind index                      \Cy previous-line

# save mail to file
macro index,pager s "| ~/.mutt/file_email ~/text/saved-mail/<enter>"
# save attachment to ~/hub/mail/
macro attach s <save-entry><bol>~/hub/mail/<enter>
