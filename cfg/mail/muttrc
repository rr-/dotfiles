# basic -----------------------------------------------------------------------
set editor=`echo \$EDITOR`
set mail_check=30
set timeout=30
set send_charset='utf-8'
set beep_new=yes
set help=no  # disable top bar

# directories
set header_cache='~/.mutt/cache/headers'
set certificate_file='~/.mutt/certificates'

# colors
source ~/.mutt/colors.muttrc

# prefer plaintext to html
auto_view text/html
alternative_order text/plain text/html

# add labels in index
set index_format='%4C %Z %{%b %d} %-15.15L (%?l?%4l&%4c?) %s%* %y'

# group messages by threads
set sort='threads'
set sort_browser='reverse-date'
set sort_aux='last-date-received'
set hide_thread_subject=no
unset collapse_unread
# t tags messages
# & joins message threads
# # unjoins message threads

# mail dir config
set mbox_type=Maildir

set mask='!^\\.[^.]'
set mbox='~/mail'
set spoolfile='~/mail'
set folder='~/mail'
set trash='~/mail/.trash'
set postponed='~/mail/.postponed'
set record='~/mail/.sent'

set sort_browser=desc

mailboxes =
mailboxes =.trash
mailboxes =.postponed
mailboxes =.sent

unignore x-label

# smtp config
source ~/.mutt/smtp.muttrc

# reply using the address the message was sent to
alternates '^.*@(sakuya.pl|oldcastle.moe)|mkurczew@gmail.com|marcin.kurczewski@.*$'
set reverse_name=yes
set reverse_realname=yes

# bindings --------------------------------------------------------------------
bind attach,browser,index       g   noop
bind attach,browser,index       gg  first-entry
bind attach,browser,index       G   last-entry
bind browser,pager,index        N   search-opposite
bind pager                      g  noop
bind pager                      gg  top
bind pager                      G   bottom
bind pager                      k   previous-line
bind pager                      j   next-line
bind index,pager                K   edit-label

bind attach,browser,pager,index \CF next-page
bind attach,browser,pager,index \CB previous-page
bind attach,browser,pager,index \Cu half-up
bind attach,browser,pager,index \Cd half-down
bind browser,pager              \Ce next-line
bind browser,pager              \Cy previous-line
bind index                      \Ce next-line
bind index                      \Cy previous-line

# delete message bypassin trash
bind index D purge-message

bind index - collapse-thread
bind index _ collapse-all

# save mail to file
macro index,pager s '| ~/.mutt/file_email ~/text/saved-mail/<enter>'
# save attachment to ~/hub/
macro attach s '<enter-command>unset wait_key<enter><save-entry><bol>~/hub/<enter>o<shell-escape>chmod 0644 ~/hub/*<enter><enter-command>set wait_key<enter>'
