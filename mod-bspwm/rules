#!/bin/sh

window_id=$1
window_class=$2
instance=$3
title=$(xdotool getwindowname "$window_id")

if [ "$window_class" = Pidgin ] ; then
    case "$title" in
        buddy*list|Buddy*List)
            echo "floating = on"
            xdotool windowmove "$window_id" 3440 90
            ;;
        *)
            echo "floating = on"
            xdotool windowmove "$window_id" 1990 90
            ;;
    esac
fi
