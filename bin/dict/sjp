#!/usr/bin/python3
# Looks up a word in Słownik Języka Polskiego
# and prints it to the standard output.

import sys
import urllib.request
import urllib.parse
import re
from bs4 import BeautifulSoup


def get_first(input_list):
    ''' Gets the first element from a list, or None if the list is empty. '''
    return (input_list or [None])[0]


def text_with_newlines(elem):
    text = ''
    try:
        for child in elem.recursiveChildGenerator():
            if isinstance(child, str):
                text += child.strip()
            elif child.name == 'br':
                text += '\n'
    except AttributeError:
        return str(elem)
    return text


def print_word_def(word):
    ''' Prints a word. '''

    url = 'http://sjp.pl/' + urllib.parse.quote(word)
    content = urllib.request.urlopen(url).read().decode('utf8')

    soup = BeautifulSoup(content, 'html.parser')
    for header in soup.find_all('h1'):
        print(header.text)
        node = header.next_sibling
        while node is not None:
            if node.name != 'div':
                text = text_with_newlines(node).strip()
                text = re.sub(r'\n\s+', '\n', text)
                if text and 'dopuszczalne w grach' not in text \
                        and text != header.text:
                    print(text)
            node = node.next_sibling
            if not node \
                    or node.name == 'hr' \
                    or node.name == 'h1' \
                    or getattr(
                        node, 'text', '').lower().startswith('komentarze:'):
                break
        print()


def main():
    for arg in sys.argv[1:]:
        print_word_def(arg)


if __name__ == '__main__':
    main()
