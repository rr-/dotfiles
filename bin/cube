#!/usr/bin/python3

system_template = "\x1B[{fgbg};5;{color}m[test]\x1B[0m"
cube_template = "\x1B[{fgbg};5;{color}m{color:2X}\x1B[0m"
ramp_template = cube_template
indent = ' ' * 2

print('System colors:\n')
for fgbg in [48, 38]:
    print(indent, end='')
    for color in range(16):
        print(
            system_template.format(fgbg=fgbg, color=color),
            end='\n' + indent if color % 8 == 7 else '')
    print('')

print('Color cube:\n')
for fgbg in [48, 38]:
    for r in range(6):
        print(indent, end='')
        for g in range(6):
            for b in range(6):
                color = 16 + r * 36 + g * 6 + b
                print(
                    cube_template.format(fgbg=fgbg, color=color),
                    end='')
        print('')
    print('')

print('Grayscale ramp:\n')
for fgbg in [48, 38]:
    print('  ', end='')
    for color in range(232, 256):
        print(ramp_template.format(fgbg=fgbg, color=color), end='')
    print('')
