#!/bin/sh
# Portable clipboard

# cygwin
if [ -e /dev/clipboard ]; then
    if [ "$1" == -o ]; then
        cat /dev/clipboard
    else
        cat >/dev/clipboard
    fi
fi

# X
if command -v xclip &>/dev/null; then
    if [ "$1" == -o ]; then
        xclip -sel p -o
    else
        xclip -sel p
    fi
fi
